<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:id="@+id/ivDialogIcon"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/tvDialogTitle"
        style="@style/Text.Medium"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDialogMessage"
        style="@style/Text.Small"
        android:layout_marginTop="8dp"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.widget.Button
            android:id="@+id/btnDialogOutline"
            style="@style/Button.OutlinePrimary.Small"
            android:layout_marginTop="8dp"
            android:textSize="14sp" />
        <View android:id="@+id/dialogMessageSpacer" android:layout_width="6dp" android:layout_height="match_parent"/>

        <android.widget.Button
            android:id="@+id/btnDialogPrimary"
            style="@style/Button.Primary.Small"
            android:layout_marginTop="8dp"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>