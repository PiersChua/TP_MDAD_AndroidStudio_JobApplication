<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- AppBar-->
    <style name="AppBarTitleTextAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <!-- Button Styles-->
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Primary">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonIcon" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="iconPadding">0dp</item>
        <item name="backgroundTint">@color/background</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/foreground</item>
    </style>

    <style name="ButtonRoundedIconOutline" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="backgroundTint">@color/background</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/foreground</item>
        <item name="strokeColor">@color/placeholder_foreground</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Text Styles -->
    <style name="Text">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.FormHeader">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.FormDescription">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- EditText Styles -->
    <style name="EditTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/placeholder_foreground</item>
        <item name="boxBackgroundColor">@color/placeholder_background</item>
        <item name="boxStrokeColor">@color/foreground</item>
        <item name="cursorColor">@color/foreground</item>
        <item name="hintTextColor">@color/foreground</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- ProgressBar Styles -->
    <style name="ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>


</resources>